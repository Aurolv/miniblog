<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Miniblog" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="layout-body">
    <div class="background-gradient"></div>

    <header class="site-header">
      <div class="nav-shell-desktop">
        <div class="nav-brand">
          <%= link_to root_path, class: "nav-brand-title" do %>
            Miniblog
          <% end %>
        </div>

        <nav class="nav-links" aria-label="Primary">
          <%= link_to "Posts", posts_path, class: "nav-pill" %>
          <% if logged_in? %>
            <%= link_to "Drafts", drafts_posts_path, class: "nav-pill" %>
          <% end %>
          <%= link_to "Browse users", users_path, class: "nav-pill" %>
          <% if current_user&.admin? %>
            <%= link_to "Admin", users_path, class: "nav-pill nav-pill--admin" %>
          <% end %>
        </nav>

        <div class="nav-actions">
          <% if logged_in? %>
            <%= link_to current_user, class: "user-chip" do %>
              <div class="user-chip-avatar"><%= (current_user.name.presence || current_user.email).first.upcase %></div>
              <div class="min-w-0">
                <p class="user-chip-name">
                  <%= current_user.name %>
                  <% if current_user.admin? %>
                    <%= role_badge(current_user.role) %>
                  <% end %>
                </p>
                <p class="user-chip-email"><%= current_user.email %></p>
              </div>
            <% end %>
            <%= button_to "Log out", logout_path, method: :delete, class: "btn-logout" %>
          <% else %>
            <%= link_to "Log in", login_path, class: "btn-login" %>
          <% end %>
        </div>
      </div>

      <div class="nav-shell-mobile">
        <div class="mobile-nav-top">
          <%= link_to "Miniblog", root_path, class: "nav-brand-title" %>
        </div>

        <% if logged_in? %>
          <%= link_to current_user, class: "user-chip" do %>
            <div class="user-chip-avatar"><%= (current_user.name.presence || current_user.email).first.upcase %></div>
            <div class="min-w-0">
              <p class="user-chip-name">
                <%= current_user.name %>
                <% if current_user.admin? %>
                  <%= role_badge(current_user.role) %>
                <% end %>
              </p>
              <p class="user-chip-email"><%= current_user.email %></p>
            </div>
          <% end %>

          <div class="mobile-nav-actions">
            <%= button_to "Log out", logout_path, method: :delete, class: "btn-logout" %>
          </div>
        <% else %>
          <div class="mobile-nav-actions">
            <%= link_to "Log in", login_path, class: "btn-login" %>
          </div>
        <% end %>

        <nav class="mobile-nav-links" aria-label="Mobile navigation">
          <%= link_to "Posts", posts_path, class: "nav-pill" %>
          <% if logged_in? %>
            <%= link_to "Drafts", drafts_posts_path, class: "nav-pill" %>
          <% end %>
          <%= link_to "Browse users", users_path, class: "nav-pill" %>
          <% if current_user&.admin? %>
            <%= link_to "Admin", users_path, class: "nav-pill nav-pill--admin" %>
          <% end %>
        </nav>
      </div>
    </header>

    <div class="flash-container">
      <% flash.each do |k,v| %>
        <% classes = k.to_s == "notice" ? "flash-notice" : "flash-alert" %>
        <div class="flash-message <%= classes %>">
          <div><%= v %></div>
          <button class="flash-close" onclick="this.parentElement.remove()">✕</button>
        </div>
      <% end %>
    </div>

    <main class="main-content w-full">
      <%= yield %>
    </main>

    <footer class="site-footer">
      <div class="footer-container">
        <div class="footer-brand">
          <span class="footer-title">Miniblog</span>
          <p class="footer-subtitle">A cozy place to draft, share, and discuss ideas.</p>
        </div>
        <div class="footer-meta">
          <span>© <%= Time.current.year %> Miniblog</span>
          <span>Rails • Hotwire • Tailwind</span>
        </div>
      </div>
    </footer>
  </body>
</html>
