<% content_for :title, "Posts" %>

<div class="posts-wrapper">
  <div class="posts-header">
    <h1 class="posts-title">Posts</h1>

    <% if logged_in? %>
      <%= link_to "New post", new_post_path, class: "btn-new-post" %>
    <% end %>
  </div>

  <div id="posts" class="grid gap-6">
    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="post-card">
          <div class="post-card-inner">
            <div class="flex-1">
              <%= render post %>
            </div>

            <div class="post-actions">
              <%= link_to "Show", post, class: "btn-show" %>

              <% can_manage = defined?(owns?) ? owns?(post) : (current_user && (post.user_id == current_user.id || current_user.admin?)) %>
              <% if can_manage %>
                <%= link_to "Edit", edit_post_path(post), class: "btn-edit" %>
                <%= button_to "Destroy", post, method: :delete,
                      class: "btn-destroy",
                      data: { turbo_confirm: "Are you sure?" } %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="posts-empty">
        <p class="text-lg font-medium">No posts found.</p>
        <% if logged_in? %>
          <%= link_to "Create your first post", new_post_path, class: "btn-first-post" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
