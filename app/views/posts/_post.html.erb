<div id="<%= dom_id post %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= post.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Body:</strong>
    <%= post.body %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Status:</strong>
    <%= post.status %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Published at:</strong>
    <%= post.published_at %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Author:</strong>
    <% if post.user %>
      <%= link_to post.user.name, post.user, class: "text-indigo-600 hover:text-indigo-500" %>
    <% else %>
      <span class="text-slate-500">Unknown</span>
    <% end %>
  </div>
</div>
