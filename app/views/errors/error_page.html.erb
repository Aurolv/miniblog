<div class="min-h-[70vh] flex items-center justify-center px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-3xl">
    <div class="p-[1px] rounded-[32px] bg-gradient-to-r from-rose-300 via-purple-300 to-indigo-300 shadow-[0_35px_90px_rgba(15,23,42,0.25)]">
      <div class="rounded-[32px] bg-white/95 backdrop-blur-xl px-10 py-12 space-y-7 text-center">
        <div class="mx-auto w-20 h-20 rounded-2xl bg-gradient-to-br from-rose-50 to-indigo-50 flex items-center justify-center">
          <svg class="w-10 h-10 text-rose-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4m0 4h.01M4.93 19.07A10 10 0 1 1 19.07 4.93 10 10 0 0 1 4.93 19.07Z"/>
          </svg>
        </div>
        <div class="space-y-2">
          <p class="text-xs uppercase tracking-[0.4em] text-rose-400">MiniBlog alert</p>
          <h1 class="text-4xl font-bold text-slate-900"><%= @error_title %></h1>
        </div>
        <p class="text-base text-slate-600 leading-relaxed"><%= @error_message %></p>
        <div class="pt-4 flex flex-col sm:flex-row gap-3 justify-center">
          <%= link_to "Back to home", root_path, class: "btn-primary sm:w-auto w-full" %>
          <button type="button" onclick="window.history.back()" class="btn-outline sm:w-auto w-full">Go back</button>
        </div>
      </div>
    </div>
  </div>
</div>
