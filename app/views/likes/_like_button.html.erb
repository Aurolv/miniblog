<%= turbo_frame_tag dom_id(post, :like) do %>
  <% my_like = current_user && post.likes.find_by(user: current_user) %>

  <% if current_user %>
    <% if my_like %>
      <%= button_to post_like_path(post, my_like),
            method: :delete,
            class: "btn-secondary inline-flex items-center gap-1" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor"
             viewBox="0 0 24 24" class="w-5 h-5 text-rose-600">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5
                   2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09
                   C13.09 3.81 14.76 3 16.5 3
                   19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        <span><%= post.likes.size %></span>
      <% end %>
    <% else %>
      <%= button_to post_likes_path(post),
            method: :post,
            class: "btn-secondary inline-flex items-center gap-1" do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none"
             viewBox="0 0 24 24" stroke="currentColor"
             class="w-5 h-5 text-slate-500">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5
                   2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09
                   C13.09 3.81 14.76 3 16.5 3
                   19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
        </svg>
        <span><%= post.likes.size %></span>
      <% end %>
    <% end %>
  <% else %>
    <span class="like-pill text-slate-500" title="Log in to like this post">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none"
           viewBox="0 0 24 24" stroke="currentColor"
           class="w-5 h-5 text-slate-400">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5
                 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09
                 C13.09 3.81 14.76 3 16.5 3
                 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
      </svg>
      <span><%= post.likes.size %></span>
    </span>
  <% end %>
<% end %>
