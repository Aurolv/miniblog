<div class="session-page">
  <div class="session-card">
    <div class="session-heading">
      <p class="session-kicker">Welcome back</p>
      <h1>Sign in to continue</h1>
      <p class="session-subtitle">Access drafts, follow authors, and join conversations.</p>
    </div>

    <%= form_with url: login_path, method: :post, class: "session-form", data: { turbo: false } do %>
      <div class="session-field">
        <%= label_tag :email, "Email", class: "session-label" %>
        <%= email_field_tag :email, params[:email],
              required: true, autofocus: true,
              placeholder: "you@example.com",
              class: "session-input" %>
      </div>

      <div class="session-field">
        <%= label_tag :password, "Password", class: "session-label" %>
        <%= password_field_tag :password, nil,
              required: true,
              placeholder: "••••••••",
              class: "session-input" %>
      </div>

      <div class="session-actions">
        <%= submit_tag "Log in", class: "btn-primary w-full" %>
        <p class="session-alt">
          New here?
          <%= link_to "Create an account", new_user_path, class: "session-link" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
